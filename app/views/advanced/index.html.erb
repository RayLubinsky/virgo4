<%# app/views/advanced/index.html.erb -%>
<%-
  # Advanced search page.

  lens ||= current_lens_key

  # Page name for browser history and browser tabs.
  title ||= h(t('blacklight.lens.advanced.title', lens: lens.capitalize))
  content_for(:page_title, title)

  form_title  = t('blacklight_advanced_search.form.title')
  clear_label = t('blacklight_advanced_search.form.start_over')
  clear_path  = advanced_search_path(lens)
  clear_class = 'btn btn-default pull-right advanced-search-start-over'
  clear_opt   = { class: clear_class }

-%>
<div class="advanced-search-form col-sm-12">
  <h1 class="advanced page-header">
    <%= form_title %>
    <%= link_to clear_label, clear_path, clear_opt %>
  </h1>
  <div class="row">
    <div class="col-md-8"><%= render 'advanced_search_form' %></div>
    <div class="col-md-4"><%= render 'advanced_search_help' %></div>
  </div>
</div>
